<?xml version="1.0"?>
<display:FooterPanel xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark"
                     xmlns:mx="library://ns.adobe.com/flex/mx"
                     xmlns:display="com.vango.testing.performance.viewer.controls.display.*" horizontalAlign="left">
    <fx:Style>

        Spinner {
        }

        .gradientlines {
            spinner-type: gradientlines;
            spinner-color: #ffffff;
            spinner-highlight-color: #000000;
        }

        .circles {
            spinner-type: circles;
        }

        .lines {
            spinner-type: lines;
            spinner-highlight-color: #000000;
            spinner-color: #808080;
        }

    </fx:Style>

    <display:Spinner startImmediately="true" styleName="circles" running="true"/>
    <s:Label id="statusField" text="{status}" width="100%"/>
</display:FooterPanel>
